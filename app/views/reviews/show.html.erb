<h1>Reviewer: <%= @review.author %></h1>
<h2>Product: <%= @product.name %></h2>
<h4>Rating: <%= @review.rating %> stars</h4>
<h3><%= @review.content_body %></h3>

<% if current_user && current_user.admin %>
  <p><%= link_to "Edit", edit_product_review_path(@review) %></p>
  <p><%= link_to "Delete", product_review_path(@review),
                         :data => {:confirm => "You sure?",
                                   :method => "delete"} %></p>
<% end %>

<p><%= link_to "Return to product", product_path(@product) %></p>